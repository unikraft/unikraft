menuconfig LIBUKALLOC
	bool "ukalloc: Abstraction for memory allocators"
	default y
	select LIBNOLIBC if !HAVE_LIBC
	select LIBUKDEBUG

if LIBUKALLOC
	config LIBUKALLOC_IFPAGES
		bool "Page allocation interface"
		default n
